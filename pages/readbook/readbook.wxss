/*封底 S*/

.iocn-wrapper {
    margin-top: 166rpx;
    text-align: center;
}

.text-1 {
    margin-top: 80rpx;
    font-size: 40rpx;
    color: #333;
    text-align: center;
}

.text-2 {
    margin-top: 40rpx;
    font-size: 30rpx;
    color: #888;
    text-align: center;
}


/*  按钮 */

.wrapper-btn {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    display: flex;
    height: 98rpx;
    border-top: 2rpx solid #eeeeee;
}

.wrapper-btn button,
.wrapper-btn button::after {
    border-radius: 0;
    border: none;
}

.preview-btn {
    flex: 1;
    background: #fff;
    color: #19c4ac;
}

.preview-btn-hover {
    background: #f8f8f8;
}

.finish-btn {
    flex: 1;
}


