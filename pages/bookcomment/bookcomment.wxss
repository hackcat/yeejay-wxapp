/* finishreading.wxss */
.container{
    padding-top: 10rpx;
    background: #fff;
}

.book-wrapper{
    width: 540rpx;
    height: 752rpx;
    padding: 24rpx;
    margin: 0 auto;
    border-radius: 10rpx;
    box-shadow: 0 0 30rpx rgba(221,221,221,0.8);
}

.book-wrapper .book-cover image{
    width: 540rpx;
    height: 540rpx;
}

.book-title{
    margin-top: 50rpx;
    font-size: 32rpx;
    text-align: center;
}

.book-author{
    margin-top: 20rpx;
    font-size: 24rpx;
    color: #666;
    text-align: center;
}

/*朗读书籍封底*/
/*CD 封面 S*/
.readbook-wrapper{
    margin-left: 15rpx;
    margin-right: 15rpx;
    margin-top: 15rpx;
    text-align: center;
    padding: 1rpx 0 50rpx 0;
    border-radius: 10rpx;
    box-shadow: 0 0 30rpx rgba(221,221,221,0.8);
}

.readbook-wrapper .book-cover-wp{
    position: relative;
    width: 598rpx;
    height: 514rpx;
    margin-top: 40rpx;
    margin-left:auto;
    margin-right:auto;
    border: 2rpx solid #bebdbd;
}
.readbook-wrapper .book-cover-wp > image{
    width: 598rpx;
    height: 514rpx;
    filter: blur(10rpx);
    /*opacity:0.4;
    filter:alpha(opacity=40);*/
}

.readbook-wrapper .book-cover{
    position: absolute;
    top: 24rpx;
    right: 48rpx;
    height: 462rpx;
    width: 462rpx;
    border: 2rpx solid #fff;
    border-radius: 100%;
    overflow: hidden;
}

.readbook-wrapper .book-cover > image{
    height: 462rpx;
    width: 462rpx;
}

.readbook-wrapper .cover-side{
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 44rpx;
    border-right: 1rpx solid rgb(33, 33, 33);
    background: #808080;
    background: -moz-linear-gradient(bottom, rgba(67, 67, 67, 0.5), rgba(70, 67, 67, 1.0));
    background: -webkit-linear-gradient(bottom, rgba(67, 67, 67, 0.5), rgba(70, 67, 67, 1.0));
}

.readbook-wrapper .cover-circle{
    position: absolute;
    top: 218rpx;
    right: 242rpx;
    width: 68rpx;
    height: 68rpx;
    border: 2rpx solid #fff;
    overflow: hidden;
    border-radius: 100%;
    /*background: rgba(255, 255, 255, 0.3);*/
}

.readbook-wrapper .cover-circle > image{
    width: 68rpx;
    height: 68rpx;
    filter: blur(10rpx);
}
/*CD 封面 E*/

.book-recommend{
    display: -webkit-box !important;
    margin-top: 20rpx;
    padding: 0 20rpx;
    text-indent: 2rem;
    overflow: hidden;  
    text-overflow: ellipsis;  
    word-break: break-all;  
    -webkit-box-orient: vertical;  
    -webkit-line-clamp: 2; 
    font-size: 24rpx;
    color: #999999;
}

/*点赞信息*/
.subinfo{
    display: flex;
    width: 588rpx;
    height: 50rpx;
    line-height: 50rpx;
    margin-top: 50rpx;
    margin-left: auto;
    margin-right: auto;
    padding-bottom: 30rpx;
    font-size: 32rpx;
    color: #999;
}

.subinfo .item{
    flex: 1;
}

.item image{
    display: inline-block;
    height: 40rpx;
    width: 40rpx;
}

/* 评论 */
.comment-panel {
    padding: 40rpx 24rpx 40rpx 24rpx;
    background: #fff;
}


/*无评论*/
.comment-none{
    padding-top: 100rpx;
    text-align: center;
    font-size: 30rpx;
    color: #999999;
}

.comment-item {
  display: flex;
  padding: 24rpx 12rpx 0 6rpx;
}

.comment-avatar {
  flex: 0 1 100rpx;
  width: 80rpx;
  height: 80rpx;
}

.comment-avatar image {
  width: 80rpx;
  height: 80rpx;
}

.comment-main {
  flex: 1;
  padding-right: 8rpx;
}

.comment-username {
  margin-bottom: 16rpx;
  font-size: 26rpx;
  color: #666;
}

.comment-content {
  margin-bottom: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 30rpx;
  line-height: 1.75em;
  color: #333;
}

.comment-sub{
  display: flex;
  padding-bottom: 28rpx;
  border-bottom: 1rpx solid #e4e4e4;
  font-size: 24rpx;
  color: #999;
}

.comment-time{
  flex:1;
  text-align: left;
}

.comment-replay-btn{
  flex:1;
  text-align: right;
}

.comment-replay-title{
  padding-left: 8rpx;
  margin-top: 28rpx;
  margin-bottom: 20rpx;
  border-left: 3rpx solid #38cfba;
  font-size: 30rpx;
  color: #999;
}

.comment-replay-content{
  font-size: 30rpx;
  color: #333;
  margin-bottom: 20rpx;
}

/*评论*/
.comment-wrapper{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: auto;
}
.comment-form{
  position: relative;
  background: #f8f8f8;
  border-top: 1rpx solid #dddddd;
}


 .comment-btn{
  position: absolute;
  bottom: 15rpx;
  right: 50rpx;
}

.comment-text{
  padding-right: 200rpx;
  padding: 15rpx;
}

.comment-text textarea{
  width: 490rpx;
  padding: 15rpx;
  border-radius: 4rpx;
  background: #fff;
}

