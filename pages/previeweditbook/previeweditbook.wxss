/* pages/book/book.wxss */
page{
  background: #eeeeee;
}
.swiper-wrapper {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  width: 100%;
}

.swiper-box {
  height: 100%;
}

.page-wrapper {
  border-radius: 10rpx;
  padding: 30rpx;
  background: #fff;
}
.page-wrapper .content{
  margin-top: 40rpx;
  text-indent: 2rem;
}

/*内容页*/

.bookpage-content{
  height: 1100rpx;
  width: 680rpx;
  margin: 35rpx auto 0 auto;
  border-radius: 8rpx;
  background: #fff;
}


.book-last-page-content {
  height: 100%;
  width: 100%;
  border-radius: 10rpx;
  background: #fff;
}


.bookpage .pic image {
  width: 100%;
}

.page-num{
  position: absolute;
  right: 50rpx;
  bottom: 20rpx;
  font-size: 28rpx;
  color: #999;
}

/* 封底排版 */

.book-last-page {
  background: #fff;
  height: 100%;
}


/* 封面样式 0 */
.bookcover {
  position: relative;
}

/* AB 书名样式 */
.style-a, .style-b{
  height: 1040rpx;
  width: 700rpx;
  margin-top: 30rpx;
  margin-left: auto;
  margin-right: auto;
  border-radius: 10rpx;
  background: #fff;
}

.style-a .cover-img, .style-b .cover-img{
  height: 1040rpx;
  width: 700rpx;
  overflow: hidden;
}

.style-a .cover-img image, .style-b .cover-img image{
  height: 1040rpx;
  width: 700rpx;
}

.style-a > .cover-info .title, .style-b > .cover-info .title{
    margin-top: 0;
    height: 40rpx;
    line-height: 40rpx;
    text-align: center;
    font-size: 38rpx;
    color: #333;
    white-space: nowrap;  
    text-overflow: ellipsis; 
    overflow: hidden;
}

.style-a > .cover-info .author, .style-b > .cover-info .author{
  margin-top: 10rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  font-size: 28rpx;
  color: #999999;
  white-space: nowrap;  
  text-overflow: ellipsis; 
  overflow: hidden;
}

/* 样式 A */
.style-a .cover-info{
  position: absolute;
  left: 50%;
  margin-left: -232rpx;
  top: 100rpx;
  width: 460rpx;
  padding: 18rpx 0;
  border: 2rpx solid #333333;
  outline: 14rpx solid rgba(255, 255, 255, 0.9);
  overflow: hidden;
  background: rgba(255, 255, 255, 0.9); 
  z-index: 5;
}

/* 样式 B */
.style-b .cover-info{
  position: absolute;
  left: 50%;
  margin-left: -232rpx;
  bottom: 100rpx;
  width: 460rpx;
  padding: 18rpx 0;
  border: 2rpx solid #333333;
  outline: 14rpx solid rgba(255, 255, 255, 0.9);
  overflow: hidden;
  background: rgba(255, 255, 255, 0.9); 
  z-index: 5;
}

/* 样式 C D */
.style-c, .style-d{
  height: 1040rpx;
  width: 700rpx;
  margin-top: 30rpx;
  margin-left: auto;
  margin-right: auto;
  border-radius: 10rpx;
  background: #fff;
}

.style-c .cover-img, .style-d .cover-img{
  height: 1040rpx;
  width: 700rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.style-c .cover-img image, .style-d .cover-img image{
  height: 1040rpx;
  width: 700rpx;
  border-radius: 10rpx;
}

.style-c > .cover-info .title, .style-d > .cover-info .title{
    margin-top: 0;
    text-align: center;
    height: 60rpx;
    line-height: 60rpx;
  font-size: 58rpx;
  color: #fff;
}

.style-c > .cover-info .author, .style-d > .cover-info .author{
  margin-top: 20rpx;
  text-align: center;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 36rpx;
  color: #fff;
}
